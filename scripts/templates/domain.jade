mixin usecaselist(name, list)
  h4= name
  ul
    each item in list
      li(data-title=item.Title)
        if item.linkOnly
          a(href=item.Website, target="_blank")= item.Title
        else
          span= item.Title
        img(src=item.Website + 'favicon.ico', onerror="this.style.display='none';")


.domain
  .head
    img(src='img/usecases/'+ name + '.jpg', title=Use_Case_category)
    h3= longName
    p.description= description

  .lists
    if (byStatus.operational || byStatus.under_development)
      .operational
        if (byStatus.operational)
          +usecaselist('Operational', byStatus.operational)
        if (byStatus.under_development)
          +usecaselist('Under development', byStatus.under_development)

    if (byStatus.idea)
      .idea
        +usecaselist('Idea', byStatus.idea)
